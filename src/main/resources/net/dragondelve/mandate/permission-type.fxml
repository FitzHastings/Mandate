<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="465.0" prefWidth="587.0" xmlns="http://javafx.com/javafx/22">
    <ToolBar prefHeight="40.0" prefWidth="200.0">
        <Button fx:id="addTypeButton" mnemonicParsing="false" text="+"/>
        <Button fx:id="removeTypeButton" mnemonicParsing="false" text="-"/>
    </ToolBar>
    <TableView fx:id="permissionTypeTable" prefHeight="200.0" prefWidth="651.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="#ID"/>
            <TableColumn fx:id="typeNameColumn" prefWidth="40.0" text="Type Name"/>
            <TableColumn fx:id="systemNameColumn" prefWidth="40.0" text="System Name"/>
            <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Description"/>
            <TableColumn fx:id="actionColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Action"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
